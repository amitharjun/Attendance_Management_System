<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".View_Studentattendance"
    tools:showIn="@layout/activity_view__studentattendance">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Attendance"
        android:textAllCaps="true"
        android:id="@+id/studentheading"
        android:textColor="@color/black"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="30dp">
    </TextView>

    <TextView
        android:id="@+id/reghead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/studentheading"

        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:text="Registration number"></TextView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reghead"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="3dp"
        android:hint="Wnter ythe 12 digit student registration number"
        android:id="@+id/registration_no"
        android:inputType="number">
    </EditText>
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registration_no"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="150dp"
        android:textColor="@color/black"
        android:text="Submit" />

</LinearLayout>